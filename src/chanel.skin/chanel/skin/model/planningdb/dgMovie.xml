<value><struct>
<member>
<name>selectionlistformula</name>
<value><string>db = context.getParentDatabase()

market = context.REQUEST.get("Plomino_Parent_Document")  and db.getDocument(context.REQUEST.get("Plomino_Parent_Document")).getItem("program_market") or context.REQUEST.get("program_market")

if not market:
    try:
        market = actual_context(context).getItem("program_market")
    except:
        http_refferer = context.REQUEST.get("HTTP_REFERER")
        id = http_refferer.split("/")[-2]
        doc = db.getDocument(id)
        if doc:
            market = doc.getItem("program_market")

if market:
    results = [a.getObject() for a in db.getIndex().dbsearch({'doctype': 'movie', 'movie_markets': asList(market), 'movie_is_published': True}, sortindex='movie_title')]
else:
    return []

return [( "%s %s |%s" % (r.getItem("movie_title"), (r.getItem("movie_subtitle") and "[%s]" % r.getItem("movie_subtitle") or ""), r.id)) for r in results]</string></value>
