      <elements>
        <element id="portlet_html" title="portlet_html" type="PlominoField">
          <id type="Products.Archetypes.Field.StringField">portlet_html</id>
          <FieldType type="Products.Archetypes.Field.StringField">RICHTEXT</FieldType>
          <FieldMode type="Products.Archetypes.Field.StringField">DISPLAY</FieldMode>
          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[db = plominoContext.getParentDatabase()
markets = db.callScriptMethod("scriptConfig", "getConfigValuesAsList", db, "markets")
months = db.callScriptMethod("scriptConfig", "getConfigValuesAsDict", db, "months")
current_month = months[str(Now().month())]
previous_month = months[str((Now()-31).month())]
#previous_year = 
current_year = str(Now().year())
html = """<div id="portlet_navigation"> <ul>"""
html += """<li class="main"><p><span>%s - %s</span></p></li>""" % (current_month, current_year)
for market in markets:
    market_name = market.split("|")[0]
    market_id = market.split("|")[1]
    programs = [a.getObject() for a in db.getIndex().dbsearch({'doctype': 'program', 'program_market': market_id})]
    if programs:
        shops = [a.getObject() for a in db.getIndex().dbsearch({'doctype': 'shop', 'shop_market': market_id})] 
	html += """<li><a href="#"><span>%s</span></a>""" % market_name
        if shops:
            html += """<ul>"""
            for shop in shops:
                html += """<li><a href="#"><span>%s</span></a></li>""" % shop.shop_city
	    html += """</ul>"""
        html += """</li>"""
    else:
        html += """<li><a href="#"><span style="color:lightgrey;">%s</span></a></li>""" % market_name
html += """<li class="main"><p><span>%s - %s</span></p></li>""" % (previous_month, current_year)
html += """</ul></div>"""
return html]]></Formula>
